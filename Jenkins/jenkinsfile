pipeline
{
	agent 
	{
		docker
		{
			image 'androidsdk/android-31:latest'
			reuseNode true            
	  	}
	}
	stages
	{ 
		stage('Build')
		{
			steps 
			{
				sh "echo 123"
			}
		}
	 	stage('Log the Jenkins Docker Ant Git and Java version info')
		{
			steps 
			{
			sh 'java -version'
			sh 'git --version'
			}
		}
        stage('Unit Test') {
          steps {
            // Execute your Unit Test
            sh './gradlew test'
          }
        }
	}
	post 
	{
        always 
		{
            archiveArtifacts artifacts: 'build/libs/**/*.jar', fingerprint: true
            junit 'build/reports/**/*.xml'
        }
    }
}
