pipeline
{
	agent {
		any {
			args '-u root'
			} 
		}

	

	stages
	{
		stage('Log the Jenkins Docker Ant Git and Java version info')
		{
			steps 
			{
				sh 'java -version'
				sh 'git --version'
			}
		}
		stage('Run python Script')
		{
			steps
			{
				sh 'apt-get install python-pip'
				sh 'pip install -r requirements.txt'
				sh 'python main.py'
			}
		}
	}
}
