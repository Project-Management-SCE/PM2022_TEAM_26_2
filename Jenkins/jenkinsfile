pipeline
{
	agent {
		any {
			args '-u root'
			} 
		}

	

	stages
	{
		stage('Log the Jenkins Docker Ant Git and Java version info')
		{
			steps 
			{
				sh 'java -version'
				sh 'git --version'
			}
		}
		stage('Run python Script')
		{
			steps
			{
				//sh 'sudo apt-get install python-pip'
				sh 'python3 -m pip install -r requirements.txt'
				//sh 'pip install -r requirements.txt'
				sh 'python main.py'
			}
		}
	}
}
